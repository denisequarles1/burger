<div class="row text-center">
  <img src="/public/assets/img/burger.png" alt="burger" id="burger-pic">
  <h2 class="text-center">Welcome to Eat Da Burger!</h2>
</div>
<div class="row text-center">
  <div class="col-md-6"><h2>Available Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li id="menu">
            <div class="row">
              <div class="col-md-12">
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="sleepy" value="false">
                    <button type="submit">{{this.burger_name}}</button>
                </form>
              </div>
            </div>
        </li>
          {{/unless}}
      {{/each}}
    </ul>
</div>
   
   <div class="col-md-6"><h2>Devoured</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <div class="row">
                <div class="col-md-12">
                  <form action="/{{this.id}}?_method=DELETE" method="POST">
                      <button type="submit">{{this.burger_name}}</button>
                  </form>
                </div> 
              </div>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
</div>

<div class="col-md-6 col-md-offset-3 text-center">
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Provide Burger Name Below </label>
    <input class="form-control" type="text" id="burger" name="name">
  </div>

  <button class="btn btn-success" type="submit">Add Burger</button>
</form>
</div>

